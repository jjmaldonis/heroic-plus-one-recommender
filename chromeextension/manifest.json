{
    "manifest_version": 3,
    "name": "Heroic Lightbulb +1",
    "description": "Recommends Heroic +1s based on your favorites at www.heroic.us",
    "version": "0.0.2",
    "icons": {
        "16": "images/icon-128.png",
        "32": "images/icon-128.png",
        "48": "images/icon-128.png",
        "128": "images/icon-128.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "cookies"
    ],
    "host_permissions": [
        "https://www.optimize.me/*",
        "https://www.heroic.us/*",
        "https://e137lli3v6.execute-api.us-east-1.amazonaws.com/*"
    ]
}